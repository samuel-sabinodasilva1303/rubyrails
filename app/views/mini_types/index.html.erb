<div class="format">
Mineração
</div>
<p id="notice"><%= notice %></p>
<b>Data: </b><%= date_br(Date.today) %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Acrônimo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @mini_types.each do |mini_type| %>
      <tr>
        <td><%= mini_type.name %></td>
        <td><%= mini_type.acromyn %></td>
        <td><%= link_to 'Mostrar', mini_type %></td>
        <td><%= link_to 'Editar', edit_mini_type_path(mini_type) %></td>
        <td><%= link_to 'Excluir', mini_type, method: :delete, data: { confirm: 'Tem certeza da exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Mini tipo', new_mini_type_path %>
